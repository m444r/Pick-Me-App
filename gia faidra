Î¿ÏÎ¹ÏƒÏ„Îµ Î· Loadrequests
 public static void loadRideRequests() {
    String sql = "SELECT rr.id, u.name AS passenger_name, rr.address, rr.pickup_address " +
                 "FROM ride_requests rr " +
                 "JOIN users u ON rr.passenger_id = u.id " +
                 "WHERE rr.driver_id = ? AND rr.status = 'PENDING'";

    try (Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/pickmeapp", "root", "password");
         PreparedStatement stmt = conn.prepareStatement(sql)) {

        stmt.setInt(1, Session.userId);
        ResultSet rs = stmt.executeQuery();

        // Î”Î·Î¼Î¹Î¿Ï…ÏÎ³Î¯Î± Î½Î­Î¿Ï… Ï€Î±ÏÎ±Î¸ÏÏÎ¿Ï…
        JFrame requestsFrame = new JFrame("Î•ÎºÎºÏÎµÎ¼Î® Î‘Î¹Ï„Î®Î¼Î±Ï„Î± Î”Î¹Î±Î´ÏÎ¿Î¼ÏÎ½");
        requestsFrame.setSize(500, 600);
        requestsFrame.setLocationRelativeTo(null);
        requestsFrame.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);

        JPanel requestsPanel = new JPanel();
        requestsPanel.setLayout(new BoxLayout(requestsPanel, BoxLayout.Y_AXIS));

        while (rs.next()) {
            int requestId = rs.getInt("id");
            String passengerName = rs.getString("passenger_name");
            String address = rs.getString("address");
            String pickupAddress = rs.getString("pickup_address");

            JPanel requestCard = new JPanel();
            requestCard.setBorder(BorderFactory.createTitledBorder("Î‘Î¯Ï„Î·Î¼Î±"));
            requestCard.setLayout(new GridLayout(0, 1));
            requestCard.add(new JLabel("ğŸ§ Î•Ï€Î¹Î²Î¬Ï„Î·Ï‚: " + passengerName));
            requestCard.add(new JLabel("ğŸ“ Î”Î¹ÎµÏÎ¸Ï…Î½ÏƒÎ·: " + address));
            requestCard.add(new JLabel("ğŸš— Î•Ï€Î¹Î²Î¯Î²Î±ÏƒÎ· Î±Ï€ÏŒ: " + pickupAddress));

            JButton acceptBtn = new JButton("âœ… Î‘Ï€Î¿Î´Î¿Ï‡Î®");
            JButton rejectBtn = new JButton("âŒ Î‘Ï€ÏŒÏÏÎ¹ÏˆÎ·");

            acceptBtn.addActionListener(e -> {
                updateRequestStatus(requestId, "ACCEPTED");
                requestsFrame.dispose(); // ÎšÎ»ÎµÎ¯Î½ÎµÎ¹ Ï„Î¿ Ï€Î±ÏÎ¬Î¸Ï…ÏÎ¿ Î±Ï†Î¿Ï Î³Î¯Î½ÎµÎ¹ Î±Ï€Î¿Î´Î¿Ï‡Î®
            });

            rejectBtn.addActionListener(e -> {
                updateRequestStatus(requestId, "REJECTED");
                requestsFrame.dispose(); // ÎšÎ»ÎµÎ¯Î½ÎµÎ¹ Ï„Î¿ Ï€Î±ÏÎ¬Î¸Ï…ÏÎ¿ Î±Ï†Î¿Ï Î³Î¯Î½ÎµÎ¹ Î±Ï€ÏŒÏÏÎ¹ÏˆÎ·
            });

            JPanel buttonPanel = new JPanel();
            buttonPanel.add(acceptBtn);
            buttonPanel.add(rejectBtn);
            requestCard.add(buttonPanel);

            requestsPanel.add(requestCard);
        }

        JScrollPane scrollPane = new JScrollPane(requestsPanel);
        requestsFrame.add(scrollPane);
        requestsFrame.setVisible(true);

    } catch (SQLException e) {
        e.printStackTrace();
        JOptionPane.showMessageDialog(null, "âŒ Î£Ï†Î¬Î»Î¼Î± ÏƒÏ„Î· Ï†ÏŒÏÏ„Ï‰ÏƒÎ· Î±Î¹Ï„Î·Î¼Î¬Ï„Ï‰Î½: " + e.getMessage());
    }
}


